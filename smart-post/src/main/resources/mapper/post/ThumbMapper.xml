<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.goroute.smart.post.mapper.ThumbMapper">

    <resultMap id="BaseResultMap" type="cn.goroute.smart.post.entity.pojo.Thumb">
        <id property="uid" column="uid" jdbcType="INTEGER"/>
        <response property="memberUid" column="member_uid" jdbcType="VARCHAR"/>
        <response property="toMemberUid" column="to_member_uid" jdbcType="VARCHAR"/>
        <response property="postUid" column="post_uid" jdbcType="VARCHAR"/>
        <response property="type" column="type" jdbcType="INTEGER"/>
        <response property="content" column="content" jdbcType="VARCHAR"/>
        <response property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        uid,member_uid,to_member_uid,
        post_uid,type,content,
        created_time
    </sql>

    <select id="selectThumbCount" resultType="java.lang.Integer">
        select `thumb_count`
        from smart_pms.t_post tp
        where tp.uid = #{postUid};
    </select>
</mapper>
